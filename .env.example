# =============================================================================
# StayAfrica - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# This is the single source of truth for all environment variables
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
SECRET_KEY=change-this-to-a-secure-key-in-production
DEBUG=False
ALLOWED_HOSTS=api.zimlegend.online,zimlegend.online,localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL + PostGIS)
# -----------------------------------------------------------------------------
# CRITICAL: These credentials MUST be consistent across ALL services
DB_ENGINE=django.contrib.gis.db.backends.postgis
DB_NAME=stayafrica_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7
JWT_ALGORITHM=HS256

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=StayAfrica <noreply@stayafrica.com>

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
FRONTEND_URL=https://zimlegend.online
NEXT_PUBLIC_API_BASE_URL=https://api.zimlegend.online
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_APP_NAME=StayAfrica

# -----------------------------------------------------------------------------
# AWS S3 Configuration (Optional)
# -----------------------------------------------------------------------------
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
COMMISSION_RATE=0.07
SERVICE_FEE=3.00
DEFAULT_CURRENCY=USD

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
CSRF_TRUSTED_ORIGINS=https://api.zimlegend.online,https://zimlegend.online

# -----------------------------------------------------------------------------
# Payment Providers (Optional)
# -----------------------------------------------------------------------------
PAYNOW_MERCHANT_ID=
PAYNOW_HASH_KEY=
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=
PAYFAST_PASSPHRASE=
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# Monitoring & Error Tracking (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Erlang Messaging Service Configuration
# -----------------------------------------------------------------------------
# URL for the Erlang messaging service
# Use container name 'erlang-messaging' when running in Docker
ERLANG_MESSAGING_URL=http://erlang-messaging:8765
# Optional shared secret for secure Django-Erlang communication
ERLANG_SHARED_SECRET=

# -----------------------------------------------------------------------------
# Google Maps API (Optional)
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=
