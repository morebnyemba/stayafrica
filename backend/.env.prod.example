# Django
DEBUG=False
SECRET_KEY=change-me-to-a-long-random-value
ALLOWED_HOSTS=backend,localhost,127.0.0.1
FRONTEND_URL=http://localhost:3000

# Database (PostGIS)
DATABASE_ENGINE=django.contrib.gis.db.backends.postgis
# Note: DATABASE_NAME, DATABASE_USER, DATABASE_PASSWORD, DATABASE_HOST, and DATABASE_PORT
# are defined in docker-compose.prod.yml for all services (backend, celery, celery-beat)
# to ensure consistency. If running locally without Docker, uncomment below:
# DATABASE_NAME=stayafrica_db
# DATABASE_USER=postgres
# DATABASE_PASSWORD=postgres
# DATABASE_HOST=db
# DATABASE_PORT=5432

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=change-me-too
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# Email (replace with real provider)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-smtp-user
EMAIL_HOST_PASSWORD=your-smtp-password
DEFAULT_FROM_EMAIL=StayAfrica <noreply@stayafrica.com>

# Optional: S3 (if using django-storages)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=

# Rate limiting
RATELIMIT_ENABLE=True

# Gunicorn tuning
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=60

# Google Maps API (Optional - for improved geocoding accuracy)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable: Geocoding API, Places API (optional)
GOOGLE_MAPS_API_KEY=
