# Public API base URL (inside docker network points to backend service `web`)
NEXT_PUBLIC_API_BASE_URL=http://web:8000/api
NEXT_PUBLIC_API_VERSION=v1

# NextAuth (adjust domain/HTTPS in production)
NEXTAUTH_SECRET=change-me
NEXTAUTH_URL=http://localhost:3000

# Mapbox
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token-here

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_or_test_here
STRIPE_SECRET_KEY=sk_live_or_test_here

# Optional CDN for images
NEXT_PUBLIC_IMAGE_CDN_URL=

# Analytics
NEXT_PUBLIC_GA_ID=

NODE_ENV=production
